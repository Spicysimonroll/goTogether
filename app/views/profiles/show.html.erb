<div class="user-profile p-4 border-bottom">
  <div class="d-flex align-items-center">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar-large ms-2 me-2" %>
      <div class="p-2 user-info">
        <%= current_user.profile.first_name %> <%= current_user.profile.last_name %> <span id="username" class="ms-1">@<%= current_user.profile.username %></span>
      </div>
  </div>
  <div class="mt-2 p-1 ps-3 pe-3">
    <%= current_user.profile.description %>
  </div>
</div>

<div class="d-flex justify-content-center mt-4">
  <%= month_calendar(events: @all) do |date, events| %>
    <%= date.day %>
    <% events.each do |event| %>
      <%#= event.title %>
      <div class="mt-1" style="height: 5px; width: 18px; background-color: green;"></div>
    <% end %>
  <% end %>
</div>

<div class="event-container mt-3">
  <h2 class="mb-4 text-center">My upcoming events</h2>
  <% @all.each do |event| %>
    <%= link_to event_path(event) do  %>
      <div class="event-card d-flex">
        <div class="event-card-left" style="background-image: url('https://images.pexels.com/photos/976866/pexels-photo-976866.jpeg'); background-size: cover;"></div>
        <div class="event-card-right">
          <h5 class="card-title"><%= event.title %></h5>
          <div class="event-right-info">
              <%= event.start_date.strftime('%e %B %Y') %>
              <br>
              <%= event.address %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
