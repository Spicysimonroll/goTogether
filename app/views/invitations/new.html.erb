<div class="container">
  <h1 class="pt-4 pb-4 text-center">Send invites</h1>
  <div class="form">
    <% friend_groups = []%>
    <% friend_groups = current_user.groups.each do |group| %>
      <% friend_groups << group.name %>
    <% end %>
    <%= simple_form_for ([@event, @invitation]) do |f| %>
      <%= f.input :friendship_id,
                  collection: friend_groups,
                  label: false,
                  placeholder: "Invite some friends!",
                  autofocus: true,
                  input_html: { autocomplete: "friendship_id" }%>
      <%= f.submit "Invite", class: "button-primary w-100" %>
    <% end %>
  </div>
</div>
