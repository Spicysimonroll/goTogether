<div id="banner">
  <%= image_tag "concert2.jpeg", id: "homepage-img" %>
  <p>Share, enjoy, feel alive.</p>
</div>

<%# <p class="phrase">Changing the way people connect.</p> %>

<%= link_to "Find your next experience", events_path, class: "button-primary mt-4", id: "homepage-btn" %>

<h2 class="phrase text-center mt-4 mb-4">Don't miss these top-events!</h2>

<div class="event-container mt-4 ms-1 me-1">
  <% @public_events.first(5).each do |event| %>
    <%= link_to event_path(event) do  %>
      <div class="event-card d-flex">
        <div class="event-card-left" style="background-image: url('https://images.pexels.com/photos/976866/pexels-photo-976866.jpeg'); background-size: cover;"></div>
        <div class="event-card-right">
          <h5 class="card-title"><%= event.title %></h5>
          <div class="event-right-info">
            <p class="mt-2 mb-2"><i class="fa-solid fa-calendar-days me-2"></i><%= event.start_date.strftime('%e %B %Y') %></p>
            <p class="m-0 d-flex"><i class="fa-solid fa-location-dot me-2 pt-1"></i><span class="event-address"><%= event.address %></span></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
