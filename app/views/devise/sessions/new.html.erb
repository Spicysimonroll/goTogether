<div class="sign-background-image">
  <div class="form-center">
    <div class="d-flex justify-content-center p-3">
      <%= image_tag "logo", alt: "goTogether logo", width: 230, height: 80 %>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ms-4 me-4"}, data: { turbo: :false }) do |f| %>
      <div class="form-inputs container">
        <%= f.input :email,
                    label: false,
                    placeholder: "Email",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: false,
                    placeholder: "Password",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex text-center ms-2 me-2">
        <%= f.button :submit, "Log in", class: "button-primary flex-grow-1" %>
      </div>
    <% end %>

    <div class="text-center p-3"><%= render "devise/shared/links" %></div>
  </div>
</div>
