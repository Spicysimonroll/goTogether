<div class="event-container mt-4 ms-1 me-1">

  <h1 class="text-center">Events</h1>

<div class="row">
  <div class="col-12">
    <%= form_with(url: events_path, method: :get, local: true, class: "form-inline my-2 my-lg-0") do |form| %>
      <%= form.select :city, options_for_select(@cities, params[:city]), { include_blank: "Select city" }, class: "form-control", onchange: "this.form.submit();" %>
      <%= form.text_field :query, placeholder: "Search events", class: "form-control mr-sm-2" %>
    <% end %>
  </div>
</div>





  <div class="type-of-event">
    <p class="pt-4 pb-4 text-center">Popular near you</p>
  </div>

  <% @public_events.each do |event| %>
    <%= link_to event_path(event) do  %>
      <div class="event-card d-flex">
        <div class="event-card-left" style="background-image: url('https://images.pexels.com/photos/976866/pexels-photo-976866.jpeg'); background-size: cover;"></div>
        <div class="event-card-right">
          <h5 class="card-title"><%= event.title %></h5>
          <div class="event-right-info">
            <p class="mt-2 mb-2"><i class="fa-solid fa-calendar-days me-2"></i><%= event.start_date.strftime('%e %B %Y') %></p>
            <p class="m-0 d-flex"><i class="fa-solid fa-location-dot me-2 pt-1"></i><span class="event-address"><%= event.address %></span></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

    <div class="type-of-event">
      <p class="pt-4 pb-4 text-center"> My upcoming events</p>
    </div>

  <% @booked_events.each do |event| %>
  <%= link_to event_path(event) do  %>
  <div class="event-card d-flex">
    <div class="event-card-left" style="background-image: url('https://images.pexels.com/photos/976866/pexels-photo-976866.jpeg'); background-size: cover;"></div>
    <div class="event-card-right">
      <h5 class="card-title"><%= event.title %></h5>
      <div class="event-right-info">
        <p class="mt-2 mb-2"><i class="fa-solid fa-calendar-days me-2"></i><%= event.start_date.strftime('%e %B %Y') %></p>
        <p class="m-0 d-flex"><i class="fa-solid fa-location-dot me-2 pt-1"></i><span class="event-address"><%= event.address %></span></p>
      </div>
    </div>
  </div>
    <% end %>
  <% end %>

</div>
