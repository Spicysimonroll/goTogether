<div class="event-container">


<h1>Events</h1>

<div class="row">
  <div class="col-12">
    <%= form_with(url: events_path, method: :get, local: true, class: "form-inline my-2 my-lg-0") do %>
      <%= text_field_tag :query, params[:query], placeholder: "Search events", class: "form-control mr-sm-2" %>
      <div class="row justify-content-center">
        <%= submit_tag "Search", class: "btn btn-primary buttonsearch" %>
      </div>
    <% end %>
  </div>
</div>

  <div class="type-of-event">
    <p>Popular near you</p>
  </div>

 <% @public_events.each do |event| %>
 <%= link_to event_path(event) do  %>
  <div class="event-card d-flex">
    <div class="event-card-left" style="background-image: url('<%= asset_path('placeholderimage.jpeg') %>')"></div>
    <div class="event-card-right">
      <h5 class="card-title"><%= event.title %></h5>
      <div class="event-right-info">
         <%= event.start_date.strftime('%e %B %Y') %>
         <br>
          <br>
         <%= event.address %>
      </div>
    </div>
  </div>
   <% end %>
 <% end %>

  <div class="type-of-event">
    <p> My upcoming events</p>
  </div>


</div>
