<h1>Create a New Event</h1>

<%= form_for @event do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :start_date %>
  <%= f.date_field :start_date %>

  <%= f.label :end_date %>
  <%= f.date_field :end_date %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :is_private %>
  <%= f.check_box :is_private %>

  <%= f.submit %>
<% end %>
