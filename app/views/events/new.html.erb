<div class="container">
  <h1 class="pt-4 pb-4 text-center">Create a new event</h1>
  <div class="form">
    <%= simple_form_for(@event, html: { class: "ms-4 me-4"}) do |f| %>
      <%= f.input :title,
                  required: true,
                  label: false,
                  placeholder: "Title",
                  autofocus: true,
                  input_html: { autocomplete: "title" }%>
      <%= f.input :address,
                  required: true,
                  label: false,
                  input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
                  wrapper_html: {data: {controller: "address-autocomplete",
                  address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.input :description,
                  required: true,
                  label: false,
                  placeholder: "Description",
                  autofocus: true,
                  input_html: { autocomplete: "description" }%>
      <%= f.input :category,
                  required: true,
                  label: false,
                  placeholder: "Category",
                  autofocus: true,
                  input_html: { autocomplete: "category" }%>
      <%= f.input :photo, as: :file %>
      <%= f.input :is_private,
                  label: "Make private?" %>
      <%= f.submit "Submit", class: "button-primary" %>
    <% end %>
  </div>
</div>
