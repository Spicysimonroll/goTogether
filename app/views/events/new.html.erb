<div class="form container">
  <%= simple_form_for (@game) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :address, input_html: { data: {address_autocomplete_target: "address"}, class: "d-none"}, wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
    <%= f.input :category, collection: ["Console", "Board", "Sports", "Silly"] %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Add your game", class: "btn btn-primary" %>
  <% end %>
  <div id="back"><%= link_to "Back", root_path, class: "btn btn-primary" %></div>
</div>
