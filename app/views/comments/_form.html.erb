<%= simple_form_for([@event, Comment.new], data: { event_showpage_target: "form", action: "submit->event-showpage#sendComment" }, html: { id: "comment-input", class:"mt-2 ms-1 me-1" }) do |f| %>
  <%= f.text_area :content, placeholder: "Comment here...", rows: 1, required: true, class:"form-control flex-grow-1 rounded mb-3" %>
  <%= f.submit "Post", class: "button-primary w-100" %>
<% end %>
